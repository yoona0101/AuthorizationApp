<Window x:Class="AuthorizationApp.StaffWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AuthorizationApp"
        mc:Ignorable="d"
        Title="StaffWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            <TextBlock Text="Форма оформления заказа"/>
            <ListBox x:Name="userList"
                     Margin="10">
                
            </ListBox>
            <TextBlock Text="Введите количество"/>
            <TextBox x:Name="tbQuality"
                Margin="10"/>
            <Button x:Name="btnOrder"
                    Click="btnOrder_ButtonClick"
                    Content="Заказать"
                    Margin="300 10 300 10"/>
        </StackPanel>
    </Grid>
</Window>
